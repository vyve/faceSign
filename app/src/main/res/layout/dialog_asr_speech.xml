<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <com.noober.background.view.BLLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:bl_corners_radius="4dp"
        app:bl_solid_color="#fff">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="取消"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <com.cin.facesign.widget.voiceline.VoiceLineView
            android:id="@+id/voiceLineView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:fineness="one"
            app:lineSpeed="5"
            app:maxVolume="70"
            app:middleLine="@android:color/black"
            app:middleLineHeight="1dp"
            app:rectSpace="2dp"
            app:rectWidth="5dp"
            app:sensibility="four"
            app:viewMode="rect"
            app:voiceLine="@android:color/holo_blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="请回答"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认 / 否认"
            android:layout_gravity="center"
            android:textColor="#ff999999"
            android:textSize="14sp" />
    </com.noober.background.view.BLLinearLayout>

</LinearLayout>